[general]
# by default gitlint will ignore merge, revert, fixup and squash commits.
ignore-merge-commits=true
ignore-revert-commits=true
ignore-fixup-commits=true
ignore-squash-commits=true

# ignore the rules pre-defined in https://jorisroovers.com/gitlint/rules/
# separate by comma
#
# T1    title-max-length
# T3    title-trailing-punctuation
# T4    title-hard-tab
# B1	body-max-line-length
# B3	body-hard-tab
# B5	body-min-length
# B6	body-is-missing
# B7	body-changed-file-mention
ignore=T1,T3,T4,B1,B3,B5,B6,B7

[title-match-regex]
regex=^(build|ci|docs|feat|fix|patch|perf|refactor|style|test|design|chore|migration)(\(.+)\)?: .+$


[title-must-not-contain-word]
# comma-separated list of words that should not occur in the title (case-insensitive).
words=wip

